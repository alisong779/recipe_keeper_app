<h1><%= @recipe.name %></h1>
  <br>
  </br>
  <h2>Ingredients: <%= @recipe.ingredients %></h2>
  <br>
  <h2>Instructions: <%= @recipe.instructions %></h2>

<div class="btn-group">
  <form action="/recipes/<%= @recipe.id %>/edit" method=get>
    <input type="submit" class="button" value="Edit Recipe"/>
  </form>
  <form action="/recipes/<%= @recipe.id %>/delete" method="post">
    <input id="hidden" type="hidden" name="_method" value="delete"/>
    <input type="submit" class="button" value="Delete Recipe" />
  </form>
  <form action="/profile" method=get>
    <input type="submit" class="button" value="My Profile"/>
  </form>
  <form action="/logout" method=get>
    <input type="submit" class="button" value="Logout"/>
  </form>
  </div>






