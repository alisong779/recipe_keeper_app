<div class="btn-group">
  <h1>Hello <%= @user.username %>! Welcome to your Profile Page.</h1>

  <h3>What would you like to do?</h3>
  <form action="/recipes/create_recipe" method=get>
    <input type="submit" class="button" value="Create a Recipe"/>
  </form>
  <form action="/recipes" method=get>
    <input type="submit" class="button" value="View Your Recipes"/>
  </form>
  <form action="/logout" method=get>
    <input type="submit" class="button" value="Logout"/>
</div>



